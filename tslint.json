{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "apps/client/node_modules/**",
      "apps/client/node_modules/**"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": true,
    "no-consecutive-blank-lines": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "trailing-comma": false,
    "quotemark": [
      true,
      "single"
    ]
  }
}
